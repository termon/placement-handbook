---
import type { MarkdownHeading, MarkdownLayoutProps, } from 'astro'
type Props = {
    frontmatter: {
        title: string;
        description?: string;
        author: string;
        modified: string;
    }
};

const {frontmatter} = Astro.props as Props
---
{frontmatter && 
    <div class="border-b border-slate-800 pr-4">
        <h1 class="mb-0 py-0">{frontmatter.title}</h1>    
    </div>    
}

