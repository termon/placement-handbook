---
import type { MarkdownHeading, MarkdownLayoutProps, } from 'astro'
type Props = {
    frontmatter: {
        title: string;
        description?: string;
        author: string;
        version: string;
    };
    headings: MarkdownHeading[];
};

const { frontmatter, headings} = Astro.props as Props

const headingFormat = (depth:number) => depth==2 ? `text-md text-green-900` : `text-sm` 
---
{frontmatter && 
    <h2 class="text-2xl mb-3 text-blue-600">Quick Links</h2>
    <ul class="space-y-2">   
        {headings.map(h => (
            <li>
                <a href={`#${h.slug}`} class={`px-2 ml-${h.depth} ${headingFormat(h.depth)} font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 hover:text-blue-400 dark:hover:bg-gray-700`}>
                    {h.text}
                </a>
            </li>
        ))} 
    </ul>
}
