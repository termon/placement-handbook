---
import type { MarkdownHeading, MarkdownLayoutProps, } from 'astro'
type Props = {
    frontmatter: {
        title: string;
        description?: string;
        author: string;
    },
    modified: string
}

const {frontmatter, modified} = Astro.props as Props
---
{frontmatter && 
    <div class="border-t border-slate-800">
        <div class="flex place-content-between">
            <div><span class="font-bold text-sm text-gray-800 dark:text-gray-100 pt-0">Author: </span><span class="text-sm">{frontmatter.author}</span></div>
            <div><span class="font-bold text-sm text-gray-800 dark:text-gray-100 pt-0">Updated: </span><span class="text-sm">{modified}</span></div>
        </div>
    </div>    
}

